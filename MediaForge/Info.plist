<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSMinimumSystemVersion</key>
    <string>$(MACOSX_DEPLOYMENT_TARGET)</string>
    <key>NSHumanReadableCopyright</key>
    <string>Copyright © 2025 MediaForge. All rights reserved.</string>
    <!-- File access permissions -->
    <key>NSFileProviderDomainUsageDescription</key>
    <string>MediaForge needs access to files for transferring media between disks.</string>
    <key>NSFileProviderPresenceUsageDescription</key>
    <string>MediaForge needs to monitor files for synchronization.</string>
    <key>NSDesktopFolderUsageDescription</key>
    <string>MediaForge disk ve medya aktarımı için masaüstü dosyalarına erişim gerektirir.</string>
    <key>NSDocumentsFolderUsageDescription</key>
    <string>MediaForge medya aktarımı için belge klasörüne erişim gerektirir.</string>
    <key>NSDownloadsFolderUsageDescription</key>
    <string>MediaForge indirilen dosyalara erişim gerektirir.</string>
    <key>NSRemovableVolumesUsageDescription</key>
    <string>MediaForge çıkarılabilir disklere okuma ve yazma erişimi gerektirir.</string>
    <key>NSRemindersUsageDescription</key>
    <string>MediaForge çıkarılabilir diskler ve depolama aygıtlarına erişim gerektirir.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>MediaForge fotoğraf kitaplığındaki medya dosyalarına erişim gerektirir.</string>
    <!-- Localization settings -->
    <key>CFBundleLocalizations</key>
    <array>
        <string>en</string>
        <string>tr</string>
    </array>
</dict>
</plist> 